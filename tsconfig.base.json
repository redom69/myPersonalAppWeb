{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "importHelpers": true,
    "target": "es2019",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@mypaw/commons": ["libs/commons/src/index.ts"],
      "@mypaw/server": ["libs/server/src/index.ts"],
      "@mypaw/web-commons": ["libs/web-commons/src/index.ts"]
    },
    "types": ["jest", "node"] // Añadir jest aquí
  },
  "exclude": ["node_modules", "tmp", "**/*.test.ts", "**/*.spec.ts"],
  "include": [
    "apps/api/**/*.ts",
    "apps/api/**/*.tsx",
    "apps/mypaw/**/*.ts",
    "apps/mypaw/**/*.tsx",
    "scripts/**/*.ts"
  ]
}
